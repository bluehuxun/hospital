page{
	background:#fbf9fe;
	font-size:34rpx;
}
page>view>view{
	background:#fff;
}
.header{
	border-bottom:1px solid #e2e2e2;
	padding:30rpx 20rpx;
	display:flex;
  align-items:center;
}
.name{
	font-size:40rpx;
}
.line{
    width:1px;
    height:14px;
    background:#e3e3e3;
    float:left;
    margin:0 20rpx;
}
.doctor_intro{
	padding:20rpx;
	margin:0 0 20rpx 0;
}
.doctor_info{
	 -webkit-line-clamp: 2; 
	 -webkit-box-orient: vertical; 
	 overflow: hidden;
}
.show_all_wrap{
	display:flex;
	justify-content:flex-end;
	align-items:center;
}
.show_all{
	color:#1abb85;
}
.triangle{
	width:30rpx;
	height:30rpx;
}
.icon{
  width:30rpx;
  height:30rpx;
}