.doctors{
  font-size:34rpx;
  padding: 20rpx 0 20rpx 0;
  background: #eceeed;
}
.doctors_info_wrap{
  width:calc(100% - 40rpx);
  background: #fff;
  border:1px solid #edf3f1;
  box-shadow: 0 0 5px #eff8f5;
  margin:0 auto 0 auto;
  padding: 28rpx 0 28rpx 0;
  border-radius: 10rpx;
}
.doctors_info {
  padding: 0 0 20rpx 0;
}
.avatar_wrap{
  width:30%;
  position: relative;
  padding:0 0 0 16rpx;
}
.doctor_avatar{
  width:70%;
  border-radius: 50%;
}
.specialist,.general{
  width:104rpx;
  line-height:42rpx;
  color:#fff;
  background: #f87259;
  position: absolute;
  bottom:0;
  right:10rpx;
  font-size:24rpx;
  border-radius: 16rpx;
  text-align: center;
}
.general{
  background: #57b2f8;
}
.name{
  color:#424242;
  padding: 0 0 10rpx 0;
}
.doctor_info{
  width:60%;
}
.collect_wrap{
  height:40rpx;
  overflow: hidden;  
}
.collect{
  width:31rpx;
}
.work{
  color:#919191;
  padding: 0 0 10rpx 0;
}
.brief_intro{
  color:#1ABB85;
  max-height:40rpx;
  overflow: hidden;
}
.toggle_nav{
  width:32rpx;
  position:relative;
  top:6rpx;
}
.doctor_intro{
  color:#9b9b9b;
  text-align: center;
  border-top:1rpx solid #f5f5f5;
  padding: 25rpx 0 0 0;
}
.appoint_header{
  margin:0 0 0 34rpx;
  line-height:74rpx;
}
.appoint{
  color:#373737;
  border-left:6rpx solid #1ABB85;
  padding: 0 25rpx 0 25rpx;    
}
.price{
  color:#fff;
  background: #f87259;
  border-radius: 10rpx;
  font-size:28rpx;  
  padding: 4rpx 8rpx;
}
.appoints{
  font-size:28rpx;
  border-top:4rpx solid #f5f5f5;
}
.appoints .appoint_btn{
  width:100rpx;
  height:100%;
  flex:none;  
  background: #1ABB85;
  color:#fff;
  display: flex;
  align-items: center;
  justify-content: center;
}
.appoints .appoints_line{
  padding: 32rpx 0 0 0;
}
.appoints_item{
  width:94%;
  margin:0 3%;
  height:100rpx;
  background: #efeff4;
  border-radius: 4rpx;
  padding: 0 0 0 20rpx;
}