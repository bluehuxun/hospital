<view>
	<view class='doctor_intro'>
		<view class='title'>
		  <image src='{{img_url}}intro.png' class='icon' mode='widthFix'></image>
		  医院介绍
		</view>
		<view class='doctor_info' style='display:{{hospital_intro_display}};height:{{hospital_intro_h}};'>
