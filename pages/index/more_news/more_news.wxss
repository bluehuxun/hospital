.to_more_news{
    top:8rpx;
    right:20rpx;
    position: absolute;
    color:#ccc;
}
.header{
    padding:20rpx;
    background: #f2f2f2;
}
.header>view>view{
    padding:30rpx 14rpx;
    background: #fff;
}
.header>view:nth-child(1){
    margin: 0 0 20rpx 0;
}
.header>view>view:nth-child(1){
    margin:0 20rpx 0 0;
}
.header image{
    width: 80rpx;
    height: 80rpx!important;
}
.header .desc{
    padding: 0 0 0 40rpx;
}
.header .sub_desc{
    font-size: 28rpx;
    color:#999;
}

.sel_hospital_wrap{
  position:relative;
}
.sel_hospital{
  width:calc(100% - 40rpx);
  box-shadow: 0px 0px 5px rgba(70, 69, 69, 0.45);
  position: relative;
  z-index:1;
  padding: 20rpx;
  align-items:center;
  line-height:50rpx;
}
.more{
  width:30rpx;
  margin:0 10rpx 0 0;
}
.search_hospital{
  padding: 0 0 0 10rpx;
  background:#000;
  opacity : 0.16;
  border-radius:10rpx;
  color:rgba(152, 152, 152, 1);
  flex:1;
}
.hospitals{
  display:flex;
  align-items:center;
  padding: 0 10rpx;
  white-space:nowrap;
  flex:1;
}
.sel_hospital_img{
  /* display:flex;
  align-items: center; */
  width:28rpx;
  /* line-height:28rpx; */
  max-width:28rpx;
  max-height:28rpx;
  color:#989898;
  margin: 0 10rpx 0 0;
}
.slide-image{
  width:100%;
}
.notice_wrap{
  border-top:6px solid #F1F1F1;  
  padding: 10px;
}
.notice_swiper{
  height:60px;
}
.notice{
  width:100px;
}
.notice_right{
  width:calc(100% - 100px);
  padding: 0 0 0 10px;
  color:#4F4F4F;
}
.notice_right swiper view{
  width:100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow:ellipsis;
  line-height:30px;
}
.header_img{
  width:20px;
  margin:0  10px 0 0;
}
.info_list{
  border-bottom:5px solid #F1F1F1;
  border-top:1px solid #F1F1F1;
}
.info_list navigator{
  display:flex;
  align-items:center;
  width:100%;
  height:100%;
  justify-content:center;
}
.info_list>view{
  line-height:40px;
  border-bottom:1px solid #F1F1F1;  
}
.info_list>view>view:nth-child(1){
  border-right:1px solid #F1F1F1;
}
.services>.flex{
  padding:14px 0 10px 0;
}
.services_header{
    height:40px;
    line-height:40px;
    display:flex;
    align-items:center;
  border-bottom:1px solid #F1F1F1;
  padding: 0 0 0 10px;
}
.services_header_text{
    display: block;
    height: 16px;
    line-height: 16px;
  border-left:3px solid #1ABB85;
  padding: 0 0 0 10px;  
  font-weight: bold;
}
.hospital_introduce {
  display:flex;
  justify-content: center;
}
.service_img{
  width:50%;
}

.news{
    border-bottom: 2rpx solid #f2f2f2;
    line-height: 70rpx;
    padding: 0 0 0 20rpx;
}
.news_list>navigator{
    border-bottom: 2rpx solid #f2f2f2;
    padding: 20rpx;
}
.title{
    width: 100%;
    vertical-align: middle;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}
.list_right{
    padding: 0 0 0 20rpx;
}
.small{
    font-size:28rpx;
}
.news_title{
    padding: 0 0 0 20rpx;
}
.recent{
    width:50rpx;
    height: 50rpx;
}

.recent_img{
    width:84px;
    height:70px;
}
.news_item>view:nth-child(1){
    max-width:84px;
}
.news_item>view:nth-child(2){
    width:calc(100% - 84px);
}