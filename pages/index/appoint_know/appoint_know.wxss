page{
  height: 100%;
}
.header{
    padding: 20rpx 0 20rpx 20rpx;
}
.appoint_know{
    width: 30rpx;
    height: 30rpx!important;
}
.appoint_con .appoint_know_top_wrap image{
    background:  #eff3f6;
}
.appoint_know_top{
    width: 100%;
}
.appoint_know_bottom{
    display: block;
    width: calc(100% - 40rpx);
    margin: 0 auto;
}

.appoint_info_wrap{
    background: #fff;
}
.appoint_info{
    padding: 0 20rpx;
}
.confirm_wrap{
    width: 100%;
    height: 60px;
    /*position: fixed;*/
    bottom:0;
    left:0;
    padding: 10px;
    background: #fff;
}
.appoint_con{
    background: #eff3f6;
    overflow: auto;
    -webkit-overflow-scrolling: touch;
    padding: 20rpx 0 0 0;
}
.appoint_con>view{
    margin: 0 20rpx;
    background: #fff;
}
.confirm{
    height:40px;
    line-height:40px;
    background: #1abb85;
    color:#fff;
}